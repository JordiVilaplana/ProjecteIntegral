<?php
require('./dbhandlers/dbcon.inc');

function getUser($id) {
	$consulta = "select * from users where login='".$id."'";

	$resultado = mysqli_query($db, $consulta);
	CompruebaErrorMySQL('Error realizando la consulta', $db);
	assert($resultado !== false);
	mysqli_close($db);

	return $resultado;
}
