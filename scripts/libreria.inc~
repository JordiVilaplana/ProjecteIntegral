<?php
switch (substr($_SERVER['HTTP_ACCEPT_LANGUAGE'], 0, 2)) {
	case "ca":
		require('./lang/ca.inc');
		break;
	case "es":
		require('./lang/es.inc');
		break;
	default:
		require('./lang/en.inc');
}


function drawHead($title){
	echo '<html lang="'.$GLOBALS['t_lang'].'">
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8; " />
	<link rel="stylesheet" type="text/css" href="./css/main.css" />
	<link rel="stylesheet" type="text/css" href="./css/color.css" />
	<title>'.$title.' - stile Peluqueros, S.L.</title>
</head>
<body>
<div id="page">
	<div id="header">
		<h1><a href="./">stile Peluqueros <span class="little">S.L.</span></a></h1>
		<div id="login">
			<h4>LogIn</h4>
			<div id="user_menu">
				<form action="./login.php" method="get">
					<p>'.$GLOBALS['tlogin_user'].': <INPUT TYPE="text" NAME="login" SIZE="20" MAXLENGTH="12"></p>
					<p>'.$GLOBALS['tlogin_pass'].': <INPUT TYPE="password" NAME="password" SIZE="20" MAXLENGTH="24"></p>
					<p><input TYPE="submit" NAME="valida" VALUE="'.$GLOBALS['tlogin_login'].'"></p>
				</form>
				<hr />
				<form action="./user_register.php" method="post">
					<p>'.$GLOBALS['tlogin_rem'].' 
					<input TYPE="submit" NAME="register" VALUE="'.$GLOBALS['tlogin_reg'].'"></p>
				</form>
			</div>
		</div>
		<div class="clear"></div>
	</div>
	<div id="menu">
		<ul>
			<li>'.$GLOBALS['tmenu_services'].'
				<ul>
					<li>'.$GLOBALS['tmenu_basics'].'</li>
					<li>'.$GLOBALS['tmenu_adva'].'</li>
					<li>'.$GLOBALS['tmenu_specials'].'</li>
					<li><a href="./services.php">'.$GLOBALS['tmenu_tarifas'].'</a></li>
				</ul>
			</li>
			<li>'.$GLOBALS['tmenu_prof'].'
				<ul>
					<li>Elena</li>
					<li>Mighelo</li>
					<li>Estefanía</li>
				</ul>
			</li>
			<li><a href="./date_register.php">'.$GLOBALS['tmenu_cita'].'</a></li>
			<li><a href="./users.php">'.$GLOBALS['tmenu_users'].'</a></li>
		</ul>
		<div class="clear"></div>
	</div>
	<hr />
	<div id="contents">';
}

function drawFoot(){
	echo '</div>
	<div id="footer">
		<h5>©2012-2013 Jordi Vilaplana - '.$GLOBALS['t_footer'].' Google Chome/Chromium</h5>
	</div>
</div>
</body>
</html>';
}
?>
