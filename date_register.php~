<?php 
	require('./dbhandlers/dbcon.inc');

	$profesionales = '';
	$empleados = "select login, nombre, apellidos from users where userType = 'worker'";
	$resultado = mysqli_query($db, $empleados);
	CompruebaErrorMySQL('Error realizando la consulta', $db);
	assert($resultado !== false);
	if (mysqli_num_rows($resultado) > 0){
		while ($fila = mysqli_fetch_assoc($resultado)){
			LimpiaResultados($fila);
			$profesionales .= '<option value="'.$fila['login'].'">'
				.$fila['nombre'].' '.$fila['apellidos'].'</option>';
		}
	}

	require('./scripts/libreria.inc');
	drawHead($tdate);

	echo '<h2 class="titulo">'.$tdate.'</h2>';
	echo '<form action="" method="post">';
	echo '<p>'.$tlogin_user.': <select name="user">';

	$clientes = "select login, nombre, apellidos from users where userType = 'client'";
	$resultado = mysqli_query($db, $clientes);
	CompruebaErrorMySQL('Error realizando la consulta', $db);
	assert($resultado !== false);
	if (mysqli_num_rows($resultado) > 0){
		while ($fila = mysqli_fetch_assoc($resultado)){
			LimpiaResultados($fila);
			echo '<option value="'.$fila['login'].'">'
				.$fila['nombre'].' '.$fila['apellidos'].'</option>';
		}
	}

	echo '</select></p>';
	echo '<p>'.$tdate_day.': <input name="date" type="datetime"><input name="time" type="time"> ';
	echo ''.$tdate_hour.': <select name="time_h">';
	echo '<option value="10" selected>10</option>';
	echo '<option value="11">11</option>';
	echo '<option value="12">12</option>';
	echo '<option value="13">13</option>';
	echo '<option value="17">17</option>';
	echo '<option value="18">18</option>';
	echo '<option value="19">19</option>';
	echo '<option value="20">20</option>';
	echo '</select><select name="time_m">';
	echo '<option value="00" selected>00</option>';
	echo '<option value="15">15</option>';
	echo '<option value="30">30</option>';
	echo '<option value="45">45</option>';
	echo '</select></p><hr />';

	$servicios = "select * from services";
	$resultado = mysqli_query($db, $servicios);
	CompruebaErrorMySQL('Error realizando la consulta', $db);
	assert($resultado !== false);
	if (mysqli_num_rows($resultado) > 0){
		while ($fila = mysqli_fetch_assoc($resultado)){
			LimpiaResultados($fila);
			echo '<p><input type="checkbox" name="'.$fila['id'].'">'
				.getServNames($fila['id']).' <select name="pro_'.$fila['id'].'">'
				.$profesionales.'</select></p>';
		}
	}

	echo '<p><INPUT TYPE="submit" NAME="cita" VALUE="'.$tdate_date.'"></p></form>';

	mysqli_free_result($resultado);
	mysqli_close($db);

	drawFoot();
?>
